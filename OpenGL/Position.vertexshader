#version 330

in vec3 vertices;
in vec3 normals;
in vec2 texCoords;

uniform mat4 World; // World matrix
uniform mat4 WVP; // World View Projection matrix

out vec3 retWorldPos;
out vec2 retTexCoord;

void main()
{
	gl_Position = WVP * vec4(vertices, 1.0);
	retWorldPos = vec3(World * vec4(vertices, 1.0f)); // World position for color
	retTexCoord = texCoords;
}
